<html>
  <head>
    <title>Binary Tweet - the absurd conclusion of internet publishing</title>
    <link rel="stylesheet" href="/style.css" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="container">
      <div id="tweets">
        <% for each (var tweet in this.tweets) { %>
          <div id="tweet_<%= tweet.id %>" class="tweet">
            <span class="user">
              <%= tweet.user %>
            </span>
            <span class="text">
              <%= tweet.text.replace("@binarial", '') %>
            </span>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>